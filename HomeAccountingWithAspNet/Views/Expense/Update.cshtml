@model HomeAccountingWithAspNet.Models.ViewModels.ExpenseMV

@{
    ViewData["Title"] = "Update";
}

<h1>Изменить</h1>

<h4>Расход</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Expense.Id" />
            <div class="form-group">
                <label asp-for="Expense.Category" class="control-label"></label>
                <select asp-for="Expense.ExpenseTypeId" asp-items="@Model.TypeDropDown" class="form-control">
                    <option selected>--Select Expense type --</option>
                </select>
                <span asp-validation-for="Expense.ExpenseTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.dateTime" class="control-label"></label>
                <input asp-for="Expense.dateTime" class="form-control" />
                <span asp-validation-for="Expense.dateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Amount" class="control-label"></label>
                <input asp-for="Expense.Amount" class="form-control" />
                <span asp-validation-for="Expense.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Comment" class="control-label"></label>
                <input asp-for="Expense.Comment" class="form-control" />
                <span asp-validation-for="Expense.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

